<h1>Login</h1>

<%= form_tag '/login' do %>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <div class="form-group">
      Email: <%= text_field_tag :email %> <br />
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Submit" %>
    </div>
  </div>
</div>

<% end %>